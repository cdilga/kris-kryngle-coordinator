{
  "name": "cloudflare-pages-template",
  "version": "0.1.0",
  "description": "Cloudflare Pages template with functions",
  "scripts": {
    "dev": "wrangler pages dev ./public",
    "build": "echo 'No build step required for static files'",
    "deploy": "wrangler pages deploy ./public",
    "preview": "wrangler pages deploy ./public --branch preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:local": "wrangler pages dev ./public & npm run test:e2e",
    "test:deployed": "DEPLOYED_URL=https://$(npm pkg get name | tr -d '\"').dilger.dev playwright test"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@playwright/test": "^1.48.0",
    "miniflare": "^3.0.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}